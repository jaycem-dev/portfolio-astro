---
import Link from "@ui/Link.astro";
import ArrowRightIcon from "@assets/icons/arrow-right.svg";
import ArrowRightUpIcon from "@assets/icons/arrow-right-up.svg";
---

<section>
    <div class="mt-16 flex flex-col justify-center gap-8">
        <!--text-->
        <div class="space-y-2">
            <p class="animate-fade text-2xl font-bold">I'm Jordan Cortes,</p>
            <h1 class="animate-fade-up-500">
                <span
                    class="animate-gradient bg-linear-to-r from-orange-400 via-fuchsia-400 to-blue-400 bg-clip-text text-transparent"
                >
                    Software Developer
                </span>
                who believes in the power of
                <span class="text-muted-foreground"> simplicity.</span>
            </h1>
        </div>

        <!--call to action-->
        <div
            class="flex w-full flex-col gap-8 sm:flex-row sm:items-center sm:justify-between"
        >
            <div class="flex gap-4">
                <Link
                    class="space-x-1"
                    variant="outline"
                    size="lg"
                    href="https://github.com/jaycem-dev"
                >
                    <span>GitHub</span>
                    <ArrowRightUpIcon width={20} height={20} />
                </Link>

                <Link
                    class="group space-x-2"
                    href={"mailto:" + import.meta.env.EMAIL}
                    size="lg"
                >
                    <span>Contact</span>
                    <ArrowRightIcon
                        class="transition-transform group-hover:translate-x-2"
                        width={20}
                        height={20}
                    />
                </Link>
            </div>
        </div>
    </div>
</section>
