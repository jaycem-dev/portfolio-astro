---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@lib/utils";
import { getRelativeLocaleUrl } from "astro:i18n";
import type { Locale } from "@lib/translations";

export interface Props extends HTMLAttributes<"a"> {
    variant?: "destructive" | "outline" | "secondary" | "ghost" | "link" | "card" | "none";
    size?: "sm" | "lg" | "icon";
    lang?: Locale;
}

const { variant = "default", size = "default", lang, href, ...props } = Astro.props;

// Localize the URL if lang is provided and href is an internal link (string only)
const localizedHref = lang && typeof href === "string" && !href.startsWith("http") && !href.startsWith("mailto:")
    ? getRelativeLocaleUrl(lang, href)
    : href;

const isStyledVariant = variant !== "card" && variant !== "none";
---

<a
    href={localizedHref}
    class={cn(
        // Base styles - only apply to styled variants
        isStyledVariant && "inline-flex items-center justify-center whitespace-nowrap rounded-3xl text-sm font-medium ring-offset-background transition-colors focus-visible:outline-hidden focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50",

        // Variant styles
        {
            "bg-primary text-primary-foreground hover:bg-primary/90": variant === "default",
            "bg-destructive text-destructive-foreground hover:bg-destructive/90": variant === "destructive",
            "border border-input bg-background hover:bg-accent hover:text-accent-foreground": variant === "outline",
            "bg-secondary text-secondary-foreground hover:bg-secondary/80": variant === "secondary",
            "hover:bg-accent hover:text-accent-foreground": variant === "ghost",
            "text-muted-foreground hover:text-primary": variant === "link",
            "block w-full rounded-3xl border bg-linear-to-tr from-zinc-50 to-zinc-100 transition-transform duration-500 hover:scale-[102%] dark:from-zinc-950 dark:to-zinc-900": variant === "card",
        },

        // Size styles - only apply to styled variants
        isStyledVariant && {
            "h-10 px-4 py-2": size === "default",
            "h-9 rounded-3xl px-3": size === "sm",
            "h-11 rounded-3xl px-8": size === "lg",
            "h-10 w-10": size === "icon",
        },

        Astro.props.class,
    )}
    {...props}
>
    <slot />
</a>
