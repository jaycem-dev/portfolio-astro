---
import Link from "@ui/Link.astro";
import TagsIcon from "@assets/icons/tags.svg";
import { getTranslations, type Locale } from "@lib/translations";

type Props = {
    tags: string[];
    type: "blog" | "projects";
    lang: Locale;
};

const { tags, type, lang } = Astro.props;
const t = getTranslations(lang);
---

<ul class="flex flex-wrap items-center gap-2">
    <li>
        <TagsIcon width={30} height={30} />
    </li>
    {
        tags.map((tag) => (
            <li>
                <Link
                    variant="secondary"
                    size="sm"
                    href={`/${t.routes[type]}/tag/${tag}`}
                    lang={lang}
                >
                    #{tag}
                </Link>
            </li>
        ))
    }
</ul>
