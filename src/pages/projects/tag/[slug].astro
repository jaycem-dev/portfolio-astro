---
import Projects from "@/components/Projects.astro";
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";

const { slug } = Astro.params;
const tag = Astro.props;

export async function getStaticPaths() {
    const data = await getCollection("projects", ({ id }) => {
        // Filter to only English content (not in es/ subfolder)
        return !id.startsWith("es/");
    });
    const tags = Array.from(
        new Set(data.flatMap((item) => item.data.tags)),
    ).map((tag) => ({ tag }));

    const paths = tags.map((item) => ({
        params: { slug: item.tag },
        props: item,
    }));

    return paths;
}
---

<Layout title={`${slug} Projects | Jaycem`} lang="en">
    <Projects lang="en" homepage={false} title="Projects" filter={tag.tag} />
</Layout>
