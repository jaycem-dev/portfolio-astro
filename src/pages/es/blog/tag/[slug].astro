---
import Layout from "@layouts/Layout.astro";
import BlogPosts from "@components/BlogPosts.astro";
import { getCollection } from "astro:content";

const { slug } = Astro.params;
const tag = Astro.props;

export async function getStaticPaths() {
    const data = await getCollection("blog", ({ id }) => {
        // Filter to only Spanish content (in es/ subfolder)
        return id.startsWith("es/");
    });
    const tags = Array.from(
        new Set(data.flatMap((item) => item.data.tags)),
    ).map((tag) => ({ tag }));

    const paths = tags.map((item) => ({
        params: { slug: item.tag },
        props: item,
    }));

    return paths;
}
---

<Layout title={`${slug} Blog | JC Portfolio`} lang="es">
    <BlogPosts lang="es" homepage={false} filter={tag.tag} title="Blog" />
</Layout>
